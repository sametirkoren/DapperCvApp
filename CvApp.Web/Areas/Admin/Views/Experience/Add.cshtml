@model ExperienceAddDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<form asp-action="Add" asp-controller="Experience" method="post">
    <div class="form-group">
        <label>Ünvan : </label> <span asp-validation-for="@Model.Title" class="text-danger"></span>
        <input asp-for="@Model.Title" class="form-control" />
    </div>

    <div class="form-group">
        <label>Firma : </label> <span asp-validation-for="@Model.SubTitle" class="text-danger"></span>
        <input asp-for="@Model.SubTitle" class="form-control" />
    </div>

    <div class="form-group">
        <label>Başlangıç Tarihi  : </label> <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
        <input asp-for="@Model.StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Bitiş Tarihi  : </label> <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
        <input asp-for="@Model.EndDate" class="form-control" />
    </div>

    <div class="form-group">
        <label>Açıklama   : </label> <span asp-validation-for="@Model.Description" class="text-danger"></span>
        <input asp-for="@Model.Description" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>