@model InterestUpdateDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<form asp-action="Update" asp-controller="Interest" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>Hobi Bilgisi : </label> <span asp-validation-for="@Model.Description" class="text-danger"></span>
        <input asp-for="@Model.Description" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>